<script src="/javascripts/setpagecontent.js"></script>
<script src="/javascripts/setlessonplan.js"></script>
<script src="/javascripts/setselectoption.js"></script>
<script src="/javascripts/setactivity.js"></script>

<div class="wrapper">
  <!-- Sidebar  -->
  <nav id="sidebar" class="active fixed-left">
    <ul class="list-unstyled">
        <li class="sidebar-header">
            <a href="javascript:void(0)" class="sidebarCollapse"><i class="fas fa-align-justify"></i></a>
        </li>
        <li class="sidebar-menu">
            <a href="#sidebarul" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                <img src="/images/idea.svg" width="30" height="30" class="d-inline-block">
                訂定課程目標
            </a>
            <ul class="siderul collapse show list-unstyled" id="sidebarul"></ul>
        </li>
        <li class="sidebar-menu">
            <a href="#activityDesignUl" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                <img src="/images/fee.svg" width="30" height="30" class="d-inline-block">活動與評量設計
            </a>
            <ul class="siderul collapse show list-unstyled" id="activityDesignUl"></ul>
        </li>
    </ul>
  </nav>

  <!-- Page Content  -->
  <div id="content" class="active">
    <!--實作/想法切換-->
    <div class="row">
        <div class="mode-switch position-fixed">
          <div class="btn-group mode-switch-btn" role="group" id="mode_switch">
            <input type="button" class="btn btn-success mode_btn" value="教案撰寫" id="edit">
            <input type="button" class="btn btn-success mode_btn" value="想法討論" id="idea">
          </div>
        </div>
    </div>
    
    <div class="card" style="margin-top: 50px;">
      <div class="h5 card-header text-white bg-selfblue">
        訂定課程目標
      </div>
      <div id="setlesson" class="card-body">
          <!--js所需資料-->
          <p id="course_field_info" style="display: none;"><%= course_field %></p>
          <p id="course_grade_info" style="display: none;"><%= course_grade %></p>
          <p id="course_version_info" style="display: none;"><%= course_version %></p>
          <p id="ccdimesionData" style="display: none;"><%= ccdimesionData %></p>
          <p id="ccitemData" style="display: none;"><%= ccitemData %></p>
          <p id="ccfieldData" style="display: none;"><%= ccfieldData %></p>
          <p id="lfitemData" style="display: none;"><%= lfitemData %></p>
          <p id="lfchilditemData" style="display: none;"><%= lfchilditemData %></p>
          <p id="lfcontentData" style="display: none;"><%= lfcontentData %></p>
          <p id="issuenameData" style="display: none;"><%= issuenameData %></p>
          <p id="issuethemeData" style="display: none;"><%= issuethemeData %></p>
          <p id="issuecontentData" style="display: none;"><%= issuecontentData %></p>
          <p id="basicData" style="display: none;"><%= basicData %></p>
          <p id="lessonplanActivityName" style="display: none;"><%= lessonplanActivityName %></p>
          <p id="lessonplanActivityProcessData" style="display: none;"><%= lessonplanActivityProcessData %></p>
          <p id="lessonplanStageData" style="display: none;"><%= lessonplanStageData %></p>
          <p id="twowayTableData" style="display: none;"><%= twowayTableData %></p>
          <!------------------------------------------------------------------>
      </div><!--setlesson end-->
    </div><!--card 訂定課程目標 end-->
    <div class="card">
      <div class="h5 card-header text-white bg-selfblue">
        活動與評量設計
      </div>
      <div id="setactivity" class="card-body">
        <button class="btn btn-add-activity btn-lg btn-block" style="margin-bottom: 15px;" data-toggle="modal" data-target="#creatActivityModal"><i class="fas fa-plus"></i> 新增活動</button>
      </div><!--setactivity end-->
    </div><!--card 活動與評量設計 end-->

    <!--雙向細目表button-->
    <div>
      <button type="button" class="btn btn-circle bg-selfblue" title="學習目標與活動、評量對應表" onclick="openTwoWayTableModal();"><i class="fas fa-tasks"></i></i></button>
    </div>
  </div>
</div>


