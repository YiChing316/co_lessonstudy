<!--自定義單元/活動-->
<div class="modal fade" id="customUnitandActivityModal" tabindex="-1" role="dialog" aria-labelledby="customUnitandActivityModalLabel" aria-hidden="true" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header bg-selfblue text-white">
        <h5 class="modal-title" id="customUnitandActivityModalLabel">自定義單元/活動</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="modalclosebtn('customUnitandActivityModal')">
          <span class="text-white" aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label id="customField"></label>
          <label id="customVersion"></label>
          <label id="customGrade"></label>
        </div>
        <div class="form-group">
          <label>學期</label>
          <select class="form-control" id="customSemester_sel">
            <option value="上學期">上學期</option>
            <option value="下學期">下學期</option>
          </select>
        </div>
        <div class="form-group">
          <label>單元名稱</label>
          <input type="text" class="form-control" id="unitName" placeholder="請輸入單元名稱">
        </div>
        <div class="form-group">
          <label>活動名稱</label>
          <table class="table" id="customActivityTable">
            <thead class="thead-light">
              <tr>
                <th scope="col" width="15">#</th>
                <th scope="col">活動名稱</th>
                <th scope="col" width="40"><input type="button" class="btn btn-outline-info btn-sm float-right" value="新增活動" onclick="addCuntomActivitylist()"></th>
              </tr>
            </thead>
            <tbody id="customActivityTbody">
              <tr>
                <th scope="row">1</th>
                <td><input type="text" class="form-control activityList" id="lessonplan_unit_activity_1" placeholder="請輸入活動名稱"></td>
                <td></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <input type="button" class="btn btn-primary" value="儲存" onclick="saveLessonplanData('customlessonplan_unit')">
      </div>
    </div>
  </div>
</div>

